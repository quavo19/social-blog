<h2>Log in</h2>

<% if flash[:alert] == 'You have to confirm your email address before continuing.' %>
  <div class="alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class='login_form'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form'}) do |f| %>
    <div class="field mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form_input', placeholder: 'Email' %>
    </div>

    <div class="field mb-3">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form_input', placeholder: 'Password' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mb-3">
      <%= f.submit "Log in", class: "form-control btn btn-primary actions" %>
    </div>
    <div class="">
    <%= link_to "Not a user? Sign up", new_user_registration_path, class: "text-blue-400" %>
  </div>
  <% end %>
  <div>
    <%= render "users/shared/links" %>
  </div>
</div>