<div>
    <%= form_with model: @comment, url: user_post_comments_path, data: { turbo: false } do |form| %>
      <div class="mb-3">
        <%= form.label :text, class: "form-label" %>
        <%= form.text_area :text, class: "form-control" %>
      </div>
      <div class="text-center">
        <%= form.submit "Create Comment", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>